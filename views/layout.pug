    style.
      #view-source {
      position: fixed;
      display: block;
      right: 0;
      bottom: 0;
      margin-right: 40px;
      margin-bottom: 40px;
      z-index: 900;
      }
    nav.navbar.navbar-expand-lg.navbar-light(style='background-color: #e3f2fd;')
      .image-block
        a.navbar-brand(href='/home') SeniorClub
        if isLoggedIn
          a(href="/profile")
            img(src=profileurl, style= 'border-radius: 20%')
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='true', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            if isLoggedIn
              a.nav-link(href="/logout") Log Out
            else
              a.nav-link(href="/auth/google") Log In
          if isLoggedIn
            li.nav-item
              a.nav-link(href='/connect') Connect
            li.nav-item
              a.nav-link(href='/friends') Friends
          li.nav-item
            a.nav-link(href='/about') Learn More 
        form.form-inline.my-2.my-lg-0(id = 'form1', action = '/home', method = 'post')
          .form-row
            input.form-control.mr-sm-2(type='search', placeholder='Find media', aria-label='Search', id ='searchInput', name = 'searchInput')
            select.form-control(id = 'searchType',name = 'searchType')
              option Title
              option Topic
              option Creator
            select.form-control(id = 'mediaType',name = 'mediaType')
              option Book
              option Movie
              option TV Show
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
    if user
      nav.navbar.fixed-bottom.navbar-light.bg-light
        a.navbar-brand(href='/connect')
          button.btn.btn-light.btn-sm.btn-block(href='/profile', role='button')
            h2 Connect
        a.navbar-brand(href='/friends')
          button.btn.btn-light.btn-sm.btn-block(href='/friends', role='button')
            h2 Friends
        a.navbar-brand(href='/profile')
          button.btn.btn-light.btn-sm.btn-block(href='/profile', role='button')
            h2 Profile
        a.navbar-brand(href='/search')
          button.btn.btn-success.btn-sm.btn-block(href='/search', role='button')
            h2 Search
    else
      nav.navbar.fixed-bottom.navbar-light
        a.navbar-brand(href="/auth/google")
          button.btn.btn-danger.btn-sm.btn-block(type='submit') 
            h2 Log in
