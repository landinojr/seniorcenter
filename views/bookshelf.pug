extends layout

block content
  #books
    h2 Books
    .card-deck
      each rb in user.viewedTitles.books
        .card.text-white.bg-secondary.mb-3.bg-transparent(style='width: 13rem;')
          a(href='/home/'+rb.id)
            img.card-img-top(src=book.thumbnail, width="320",height="auto")
          .row.justify-content-center.no-gutters
            if rb.averageRating
              - var j = rb.averageRating;
                  while j > 0
                    .col-2
                      - if (j < 1 && j > 0)
                        i.fa.fa-star-half(style='font-size:24px; color: gold')
                      - else
                        i.fa.fa-star(style='font-size:24px; color: gold')
                    - j--;
  #movies
    h2 Movies and TV Shows
    .card-deck
      each wm in user.viewedTitles.movies
        .card.text-white.bg-secondary.mb-3.bg-transparent(style='width: 13rem;')
          a(href='/home/'+wm.i)
            img.card-img-top(src=book.thumbnail, width="320",height="auto")
          .row.justify-content-center.no-gutters
            if wm.averageRating
              - var k = wm.averageRating;
                  while k > 0
                    .col-2
                      - if (k < 1 && k > 0)
                        i.fa.fa-star-half(style='font-size:24px; color: gold')
                      - else
                        i.fa.fa-star(style='font-size:24px; color: gold')
                    - k--;
